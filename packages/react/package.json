{
	"name": "@cometa/react",
	"version": "0.3.0",
	"description": "React bindings layer for Cometa, the data-flow manager.",
	"type": "module",
	"scripts": {
		"test": "jest -c ../jest.config.js",
		"test:coverage": "npm test -- --coverage",
		"lib": "run-s lib:declarations lib:runtime",
		"lib:declarations": "tsc",
		"lib:runtime": "run-p lib:cjs lib:esm",
		"lib:cjs": "babel source --config-file ../babel.cjs.config.json --extensions .ts --out-file-extension .cjs --out-dir lib",
		"lib:esm": "babel source --config-file ../babel.esm.config.json --extensions .ts --out-dir lib",
		"clean": "rm -rf lib",
		"prepack": "run-s test clean lib"
	},
	"main": "./lib/index.cjs",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"sideEffects": false,
	"exports": {
		".": {
			"require": "./lib/index.cjs",
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		},
		"./scope": {
			"require": "./lib/scope.cjs",
			"types": "./lib/scope.d.ts",
			"default": "./lib/scope.js"
		},
		"./server": {
			"require": "./lib/server.cjs",
			"types": "./lib/server.d.ts",
			"default": "./lib/server.js"
		}
	},
	"license": "ISC",
	"author": "Vladimir Lewandowski <me@vovaspace.com> (https://vovaspace.com/)",
	"homepage": "https://cometa.js.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/vovaspace/cometa.git",
		"directory": "packages/react"
	},
	"bugs": {
		"url": "https://github.com/vovaspace/cometa/issues"
	},
	"dependencies": {
		"use-sync-external-store": "^1.2.0"
	},
	"peerDependencies": {
		"@cometa/core": "^0.3.0",
		"react": "^16.8.0 || ^17 || ^18"
	},
	"files": [
		"lib",
		"scope",
		"server",
		"!**/*.spec.*"
	]
}
